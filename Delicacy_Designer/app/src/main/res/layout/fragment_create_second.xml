<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cindy.crn.delicacy_designer.createRecipe.CreateSecondFragment">

    <RelativeLayout
        android:id="@+id/create_title_bar2"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#ffff7a37"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/create_recipe_cancel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#DDFFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/create_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/createRecipe"
            android:textColor="#DDFFFFFF"
            android:textSize="22sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/create_title_bar2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/recipeNameShow"
                style="@style/my_edittext_style2"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:alpha="1"
                android:maxLength="23"
                android:padding="5dp"
                android:singleLine="true"
                android:text="@string/inputNameHint"
                android:textSize="20sp"></EditText>

            <EditText
                android:id="@+id/descriptionInput"
                style="@style/my_edittext_style"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/recipeNameShow"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:alpha="1"
                android:gravity="top"
                android:hint="@string/descriptionHint"
                android:maxLength="256"
                android:padding="5dp"
                android:singleLine="false"></EditText>

            <TextView
                android:id="@+id/materialText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/descriptionInput"
                android:layout_below="@id/descriptionInput"
                android:layout_marginTop="8dp"
                android:text="@string/material"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/plusMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/materialText"
                android:layout_below="@id/descriptionInput"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/materialText"
                android:src="@drawable/plus" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2.0dip"
                android:background="@drawable/ic_shelf_category_divider" />

            <com.cindy.crn.delicacy_designer.MyListView
                android:id="@+id/materialList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/materialText"
                android:layout_alignRight="@id/descriptionInput"
                android:layout_below="@id/materialText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <View
                android:layout_width="240dip"
                android:layout_height="2.0dip"
                android:background="@drawable/ic_shelf_category_divider" />

            <com.cindy.crn.delicacy_designer.MyListView
                android:id="@+id/stepList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/materialText"
                android:layout_alignRight="@id/descriptionInput"
                android:layout_below="@id/materialList"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/materialText"
                android:layout_alignRight="@id/descriptionInput"
                android:layout_below="@id/stepList"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addStep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.4"
                    android:background="#ffff7a37"
                    android:text="@string/addStep"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />

                <Button
                    android:id="@+id/addToDraft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.4"
                    android:background="#ffff7a37"
                    android:text="@string/addToDraft"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <Button
                android:id="@+id/publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/descriptionInput"
                android:layout_alignRight="@id/descriptionInput"
                android:layout_below="@id/buttons"
                android:layout_marginTop="5dp"
                android:background="#ffff7a37"
                android:text="@string/publish"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
